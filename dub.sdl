name "nam"
description "Not Another Make."
authors "araspik"
copyright "Copyright Â© 2018, araspik"
license "MIT"

targetType "none"
dependency "nam:exe" version="*"
dependency "nam:lib" version="*"

subPackage {
  name "lib"
  targetType "library"
  targetName "nam"
  targetPath "build"
  sourcePaths "nam"
  importPaths "."
  dependency "sdlang-d" version="~>0.10.4"
  preBuildCommands "mkdir -p build" platform="posix"
  preBuildCommands "mkdir build" platform="windows"
}

subPackage {
  name "exe"
  targetType "executable"
  targetName "nam"
  targetPath "build"
  sourcePaths "src"
  importPaths "src"
  dependency "nam:lib" version="*"
  preBuildCommands "mkdir -p build" platform="posix"
  preBuildCommands "mkdir build" platform="windows"
}
